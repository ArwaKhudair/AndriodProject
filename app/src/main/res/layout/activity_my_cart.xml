<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fae5f9"
    tools:context=".MyCart">

   <ImageView
       android:id="@+id/arrow"
       android:layout_width="30dp"
       android:layout_height="30dp"
       android:src="@drawable/arrow"
       android:layout_marginTop="30dp"
       android:layout_marginLeft="30dp"
       android:background="#fae5f9"
       />
    <TextView
        android:id="@+id/my_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Cart"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black" />

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/my_cart"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/Unreal_Blu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/olay1"
            android:background="#fae5f9"
            android:layout_margin="10dp"

            />
        <TextView
            android:id="@+id/Ureal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retinol 24 Night Smoothing Seru"
            android:textColor="@color/black"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/series"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore women seru"
            android:textColor="#7675"
            android:layout_below="@+id/Ureal"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/series1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$820.00"
            android:textColor="@color/black"
            android:layout_below="@+id/series"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relative1"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/Unreal"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lakme_1"
            android:background="#fae5f9"
            android:layout_margin="10dp"

            />
        <TextView
            android:id="@+id/retinol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Retinol Advanced Renewal Night Gel"
            android:textColor="@color/black"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/series2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore women Night "
            android:textColor="#7675"
            android:layout_below="@+id/retinol"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/series3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$350.00"
            android:textColor="@color/black"
            android:layout_below="@+id/series2"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"

            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/relative2"
        android:orientation="vertical"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/Unreal1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:src="@drawable/lakme2"
            android:background="#fae5f9"
            android:layout_margin="10dp"

            />
        <TextView
            android:id="@+id/retinol1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ultimate Glam Foundation"
            android:textColor="@color/black"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:textSize="25sp"

            />

        <TextView
            android:id="@+id/series5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Explore women found "
            android:textColor="#7675"
            android:layout_below="@+id/retinol1"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            />
        <TextView
            android:id="@+id/series6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$560.00"
            android:textColor="@color/black"
            android:layout_below="@+id/series5"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relative3"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        >
        <RelativeLayout
            android:id="@+id/linear1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:background="#fae5f9"
            >
            <ImageView
                android:id="@+id/Unreal_Blur"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/pink"
                android:background="#fae5f9"
                android:layout_margin="15dp"
                />
            <TextView
                android:id="@+id/All_brands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coupon Code"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="70dp"
                android:textColor="#FD18D9" />
            <ImageView
                android:id="@+id/image"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:src="@drawable/images"
               android:layout_marginLeft="310dp"
                android:layout_marginTop="18dp"
                android:layout_marginRight="20dp"
                />
        </RelativeLayout>

    <TextView
        android:id="@+id/subtotal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Subtotal:"
        android:layout_below="@id/linear1"
        android:textColor="#7675"
        android:textSize="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        />
        <TextView
            android:id="@+id/num"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="$1.500"
            android:layout_below="@id/linear1"
            android:textColor="#FD18D9"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/delivery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Delivery:"
            android:layout_below="@id/linear1"
            android:textColor="#7675"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            />
        <TextView
            android:id="@+id/num1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="$10.00"
            android:layout_below="@id/linear1"
            android:textColor="#FD18D9"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="70dp"
            />
        <TextView
            android:id="@+id/discount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Discount:"
            android:textColor="#7675"
            android:textSize="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="______________________________________________________"
            android:layout_below="@+id/linear1"
            android:textColor="#7675"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            />
        <TextView
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="-$20.00"
            android:layout_below="@id/linear1"
            android:textColor="#02CEB9"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_marginLeft="290dp"
            android:layout_marginTop="120dp"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear1"
            android:hint="Cheakout"
            android:textColor="@color/white"
            android:background="#FD18D9"
            android:textSize="22dp"
            android:layout_marginTop="170dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            />


    </RelativeLayout>

</RelativeLayout>