<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fae5f9"
    >

    <ImageView
        android:id="@+id/image"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:src="@drawable/alina"
        android:layout_marginTop="30dp"
         />
    <TextView
        android:id="@+id/morning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Good Morning"
        android:textColor="#7675"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="25dp"
        />
    <TextView
        android:id="@+id/Alina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alina Rose"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="50dp"
        />
    <ImageView
        android:id="@+id/notf"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:src="@drawable/notifcation"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        />
    <EditText
        android:id="@+id/search"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:hint="Search"
        android:background="@color/white"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:padding="15dp"
        />
    <ImageView
        android:id="@+id/icon"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:src="@drawable/search"
        android:layout_below="@id/image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginRight="0dp"
        android:background="#fae5f9"
        />




    <!--     All Brand    -->
    <RelativeLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_below="@+id/icon"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:background="@color/white"
       >
        <TextView
            android:id="@+id/All_brands"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Brands"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/see_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="See All"
            android:textColor="#5D565B"
            android:layout_marginLeft="310dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:textSize="14sp"
            />
        <ImageView
            android:id="@+id/lakme"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/lakme1"
            android:background="#F2F1F1"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="30dp"
          />

        <TextView
            android:id="@+id/text_lakme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LakmÃ©"
            android:layout_below="@+id/lakme"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/Olay"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/olay_1"
            android:background="#F2F1F1"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="115dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Olay"
            android:layout_below="@+id/Olay"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="135dp"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/Loreal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/loreal"
            android:background="#F2F1F1"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="200dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loreal"
            android:layout_below="@+id/Loreal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="215dp"
            android:textColor="@color/black" />
        <ImageView
            android:id="@+id/Nyx"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/nyx"
            android:background="#F2F1F1"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="285dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nyx"
            android:layout_below="@+id/Nyx"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="305dp"
            android:textColor="@color/black" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flash Sale"
        android:layout_below="@+id/linear"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/see_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="See More"
        android:textColor="#d209b5"
        android:layout_below="@+id/linear"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        />
        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_below="@+id/see_more"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginStart="10dp"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/Unreal_Blur"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/unreal"
                android:background="#fae5f9"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:id="@+id/Ureal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ureal Blur perfect"
                android:textColor="@color/black"
                android:layout_below="@+id/Unreal_Blur"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/buy"
                android:layout_width="76dp"
                android:layout_height="40dp"
                android:text="Buy Now"
                android:backgroundTint="#d209b5"
                android:layout_below="@+id/Unreal_Blur"
                android:textSize="10dp"
                android:layout_marginLeft="107dp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginTop="30dp"
                />
            <TextView
                android:id="@+id/series"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$15.00"
                android:textColor="@color/black"
                android:layout_below="@+id/Ureal"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/series1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$20.00"
                android:textColor="#7675"
                android:layout_below="@+id/Ureal"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"
                android:textStyle="bold"
                />
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ralative2"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@+id/see_more"
        android:orientation="vertical"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
     >

        <ImageView
            android:id="@+id/total_effect"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/total_effect"
            android:background="#fae5f9"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Effects in one "
            android:textColor="@color/black"
            android:layout_below="@+id/total_effect"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/buy1"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:text="Buy Now"
            android:backgroundTint="#d209b5"
            android:layout_below="@+id/total_effect"
            android:textSize="10dp"
            android:layout_marginLeft="107dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/series_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$20.00"
            android:textColor="@color/black"
            android:layout_below="@+id/total"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/series_td"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30.00"
            android:textColor="#7675"
            android:layout_below="@+id/total"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ralative3"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@+id/relative1"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/lakme2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/lakme2"
            android:background="#fae5f9"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/Flawless_Skin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flawless Skin"
            android:textColor="@color/black"
            android:layout_below="@+id/lakme2"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/buy3"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:text="Buy Now"
            android:backgroundTint="#d209b5"
            android:layout_below="@+id/lakme2"
            android:textSize="10dp"
            android:layout_marginLeft="107dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/series_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$30.00"
            android:textColor="@color/black"
            android:layout_below="@+id/Flawless_Skin"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/series_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$40.00"
            android:textColor="#7675"
            android:layout_below="@+id/Flawless_Skin"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ralative4"
        android:layout_width="190dp"
        android:layout_height="190dp"
        android:layout_below="@+id/relative1"
        android:orientation="vertical"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="10dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/olay1"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:src="@drawable/olay1"
            android:background="#fae5f9"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            />
        <TextView
            android:id="@+id/Real_Results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real Results"
            android:textColor="@color/black"
            android:layout_below="@+id/olay1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/buy4"
            android:layout_width="76dp"
            android:layout_height="40dp"
            android:text="Buy Now"
            android:backgroundTint="#d209b5"
            android:layout_below="@+id/olay1"
            android:textSize="10dp"
            android:layout_marginLeft="107dp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            />
        <TextView
            android:id="@+id/series_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$40.00"
            android:textColor="@color/black"
            android:layout_below="@+id/Real_Results"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/series_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$50.00"
            android:textColor="#7675"
            android:layout_below="@+id/Real_Results"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:textStyle="bold"
            />
    </RelativeLayout>


</RelativeLayout>